{
  "name": "iptv-player-pro",
  "version": "1.0.0",
  "description": "Professional IPTV Player with Netflix-style interface",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build"
  },
  "build": {
    "appId": "com.iptv.player.pro",
    "productName": "IPTV Player Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "AudioVideo"
    }
  },
  "keywords": [
    "iptv",
    "player",
    "streaming",
    "netflix",
    "electron",
    "react"
  ],
  "author": "IPTV Player Pro Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "better-sqlite3": "^12.2.0",
    "dashjs": "^5.0.3",
    "electron-is-dev": "^3.0.1",
    "hls.js": "^1.6.10",
    "lucide-react": "^0.539.0",
    "qrcode-reader": "^1.0.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-qr-code": "^2.0.18",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.4.17"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
